{
  "name": "jira-pr-updater-action",
  "version": "1.0.0",
  "description": "The Jira PR Updater is a custom GitHub Action designed to streamline your development workflow by automatically updating pull request (PR) titles and bodies with the corresponding Jira issue number. It extracts the Jira issue number from the branch name and ensures that your PRs are properly linked to their Jira issues.",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js",
    "prepare": "husky install",
    "release": "semantic-release",
    "test": "jest"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.14.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "conventional-changelog-angular": "^8.0.0",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "semantic-release": "^24.2.0"
  }
}
